<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card card-container mt-4 text-white rounded">
      <div class="card-header text-center pt-4">
        <h1 class="h4 text-white">
          Account Login
        </h1>
      </div>
      <div class="card-body">
        <form action="/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passsword">Password:</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <button class="btn btn-success btn-block">
            Signin
          </button>
        </form>
      </div>

      <p class="text-center">Don't Have an Account?
        <a href="/auth/signup" class="text-info">Register</a></p>
    </div>
  </div>
</div>